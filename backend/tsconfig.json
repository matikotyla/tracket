{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "@constant": ["constant/"],
      "@context": ["context/"],
      "@error": ["error/"],
      "@graphql": ["graphql/"],
      "@model": ["model/"],
      "@mutation": ["mutation/"],
      "@query": ["query/"],
      "@rule": ["rule/"],
      "@schema": ["schema/"],
      "@types": ["types/"],
      "@utils": ["utils/"],
      "@validation": ["validation/"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
  // makes nexus context types not working
  // "include": ["src"]
}
